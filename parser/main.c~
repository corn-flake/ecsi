#include <stdio.h>
#include <stdlib.h>

#include "../scanner/scanner.h"
#include "parser.h"
#include <readline/readline.h>

#define PROMPT "(sicp_parser)> "

static void
parse_string (char *source)
{
  init_scanner (source);

  TokenArray tokens;
  init_token_array (&tokens);

  do
    {
      add_token (&tokens, scan_token ());
    }
  while (tokens.array[tokens.count - 1].type != TOKEN_EOF);

  init_parser (tokens);

  Value value = parse_datum ();
  while (!IS_NIL (value))
    {
      print_value (value);
      printf ("\n");
      value = parse_datum ();
    }
}

static void
interactive ()
{
  char *line = readline (PROMPT);
  while (line != NULL)
    {
      parse_string (line);
      free (line);
      line = readline (PROMPT);
    }
}

static char *
read_file (char *path)
{
  FILE *file = fopen (path, "rb");
  if (file == NULL)
    {
      fprintf (stderr, "Could not open file \"%s\".\n", path);
      exit (74);
    }

  fseek (file, 0L, SEEK_END);
  size_t file_size = ftell (file);
  rewind (file);

  char *buffer = (char *)malloc (file_size + 1);
  if (buffer == NULL)
    {
      fprintf (stderr, "Not enough memory to read \"%s\".\n", path);
    }

  size_t bytes_read = fread (buffer, sizeof (char), file_size, file);
  if (bytes_read < file_size)
    {
      fprintf (stderr, "Could not read file \"%s\".\n", path);
    }

  buffer[bytes_read] = '\0';

  fclose (file);
  return buffer;
}

static void
parse_file (char *path)
{
  char *source = read_file (path);
  parse_string (source);
  free (source);
}

int
main (int argc, char *argv[])
{
  switch (argc)
    {
    case 1:
      interactive ();
      break;
    case 2:
      parse_file (argv[1]);
      break;
    default:
      fprintf (stderr, "Usage: sicp_parser [file]\n");
      return 1;
    }

  return 0;
}
