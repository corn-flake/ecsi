#include "scan_booleans.h"
#include "scanner.h"

Token
scan_true ()
{
  if (!match ('r'))
    return make_token (TOKEN_BOOLEAN);
  if (!match_string ("ue"))
    return error_token ("Expect 'ue' after '#tr'");
  return make_token (TOKEN_BOOLEAN);
}

Token
scan_false ()
{
  if (!match ('a'))
    return make_token (TOKEN_BOOLEAN);
  if (!match_string ("lse"))
    return error_token ("Expect 'lse' after '#fa'");
  return make_token (TOKEN_BOOLEAN);
}
