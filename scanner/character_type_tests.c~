#include "character_type_tests.h"

bool
is_letter (char c)
{
  return (c >= 'a' && c <= 'z') || (c >= 'A' && c <= 'Z');
}

bool
is_digit (char c)
{
  return c >= '0' && c <= '9';
}

bool
is_hex_digit (char c)
{
  return is_digit (c) || (c >= 'a' && c <= 'f');
}

bool
is_special_initial (char c)
{
  return c == '$' || c == '%' || c == '&' || c == '*' || c == '/' || c == ':'
         || c == '<' || c == '=' || c == '>' || c == '?' || c == '@'
         || c == '^' || c == '_' || c == '~' || c == '!';
}

bool
is_initial (char c)
{
  return is_letter (c) || is_special_initial (c);
}

bool
is_explicit_sign (char c)
{
  return c == '+' || c == '-';
}

bool
is_special_subsequent (char c)
{
  return is_explicit_sign (c) || c == '.' || c == '@';
}
bool
is_subsequent (char c)
{
  return is_initial (c) || is_digit (c) || is_special_subsequent (c);
}

bool
is_sign_subsequent (char c)
{
  return is_initial (c) || is_explicit_sign (c) || c == '@';
}

bool
is_dot_subsequent (char c)
{
  return c == '.' || is_sign_subsequent (c);
}

bool
is_intraline_whitespace (char c)
{
  return c == ' ' || c == '\t';
}
