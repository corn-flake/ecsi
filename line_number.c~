#include "memory.h"
#include "line_number.h"

void addNumber(LineNumberArray array, int lineNumber) {
  if (array->lineNumbers[array->count - 1].lineNumber == lineNumber) {
    array->lineNumbers[array->count - 1].repeats++;
    return;
  }

  if (array->capacity < array->count + 1) {
    int oldCapacity = array->capacity;
    array->capacity = GROW_CAPACITY(oldCapacity);
    chunk->lineNumbers = GROW_ARRAY(LineNumber, array->lineNumbers,
				    oldCapacity, array->capacity);
  }

  LineNumber encoded_number = LineNumber {
    .lineNumber = lineNumber,
    .repeats = 1,
  };
  array->lineNumbers[array->count] = encoded_number;
  array->count++;
}
